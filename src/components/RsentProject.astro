---
import ImageModal from '../components/ImageModal.astro';
import { Image } from 'astro:assets';

---

<div class="rounded-2xl bg-white p-6 shadow dark:bg-black dark:shadow-cyan-200/5">
  <div class="flex flex-wrap items-center justify-between gap-2">
    <h3 class="text-2xl font-semibold dark:text-light">Proyectos recientes</h3>
    <a href="/portfolio" class="inline-flex items-center justify-center gap-2 border-b text-center text-base text-primary transition hover:border-b-primary dark:border-b-muted dark:hover:border-b-primary">
      <span>Ver m√°s proyectos</span>
     <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 20 20"
        fill="none"
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="1.5"
        class="h-5 w-5"
      >
        <path d="M17.5 11.667v-5h-5"></path>
        <path d="m17.5 6.667-7.5 7.5-7.5-7.5"></path>
      </svg>
    </a>
  </div>

  <div class="mt-6 space-y-6">
    <div class="group relative overflow-hidden rounded-lg bg-light p-4 pb-0 dark:bg-dark-2 md:p-6 md:pb-0 openModal" data-src="/images/282_1x_shots_so.png">
      <div class="relative aspect-6/4 overflow-hidden rounded-t-lg">
        <Image width="50" height="50" src="/images/282_1x_shots_so.png" alt="" class="h-full w-full rounded-t-lg object-cover object-top transition-transform duration-300 ease-linear group-hover:rotate-0.5 group-hover:scale-[1.01]" />
        <button class="project-gallery-link absolute left-1/2 top-1/2 grid h-10 w-10 -translate-x-1/2 -translate-y-1/2 place-content-center rounded-full bg-white text-primary shadow-lg transition lg:invisible lg:-translate-y-[40%] lg:opacity-0 lg:group-hover:visible lg:group-hover:-translate-y-1/2 lg:group-hover:opacity-100">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" class="h-6 w-6">
            <path d="M10 4.167v11.666M4.167 10h11.666"></path>
          </svg>
        </button>
      </div>
      <div class="absolute inset-x-0 bottom-0 flex flex-wrap gap-2 bg-gradient-to-t from-black/20 p-4">
        <span class="rounded bg-white px-2 py-1 text-xs font-medium text-primary shadow">Frontend</span>
      </div>
    </div>

    <div class="group relative overflow-hidden rounded-lg bg-light p-4 pb-0 dark:bg-dark-2 md:p-6 md:pb-0 openModal" data-src="/images/46shots_so.png">
      <div class="relative aspect-6/4 overflow-hidden rounded-t-lg">
        <Image width="50" height="50" src="/images/46shots_so.png" alt="" class="h-full w-full rounded-t-lg object-cover object-top transition-transform duration-300 ease-linear group-hover:rotate-0.5 group-hover:scale-[1.01]" />
        <button class="project-gallery-link absolute left-1/2 top-1/2 grid h-10 w-10 -translate-x-1/2 -translate-y-1/2 place-content-center rounded-full bg-white text-primary shadow-lg transition lg:invisible lg:-translate-y-[40%] lg:opacity-0 lg:group-hover:visible lg:group-hover:-translate-y-1/2 lg:group-hover:opacity-100">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" class="h-6 w-6">
            <path d="M10 4.167v11.666M4.167 10h11.666"></path>
          </svg>
        </button>
      </div>
      <div class="absolute inset-x-0 bottom-0 flex flex-wrap gap-2 bg-gradient-to-t from-black/20 p-4">
        <span class="rounded bg-white px-2 py-1 text-xs font-medium text-primary shadow">Full Stack</span>
      </div>
    </div>
  </div>
</div>

<ImageModal />
